
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon navbar-minimalist">
    <%= link_to "NeighborFood", root_path, class:"btn btn-neighborfood"%>


  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

<% if user_signed_in? %>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "See all dishes", dishes_path, class:"btn nb-light" %>
      </li>
      <li class="nav-item dropdown">
        <%= cl_image_tag current_user.photo_url, class:"avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>

        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
        <%= link_to "Your Profile", user_path(current_user), class:"btn nb-light" %>
        <%= link_to "Log Out", destroy_user_session_path, method: :delete, class:"btn nb-light" %>

        </div>
      </li>
    </ul>
  </div>

  <% else %>
    <%= link_to "Log In", new_user_session_path, class:"btn nb-light" %>
    <%= link_to "Become a cooker", new_user_registration_path, class:"btn nb-light" %>
  <% end %>
</div>
