
<div class="navbar-minimalist">
  <h1><%= link_to"NeighborFood", root_path, class:"btn btn-neighborfood"%></h1>

      <div class="nav-container d-flex justify-content-end">
        <%= link_to "See all dishes", dishes_path, class:"btn nb-light" %>
        <%= link_to "Become a cooker", cooker_path, class:"btn nb-light" %>
        <%= link_to "Login", new_user_session_path, class:"btn btn-login" %>
        <%= link_to "Log out", destroy_user_session_path, method: :delete, class:"btn btn-login" %>
      </div>
    </div>
</div>


<div class="jumbotron text-center">
  <h1><img class="img-circle" src="<%= @user.photo_url %>" width="100px"><%= @user.name %></h1>
  <div class="info-user"><%= @user.address %>
   <p><%= @user.email %></p>
   <p><strong>World Famous</strong> for cooking: <strong><%= @dishes.last.name %></strong>

  </div>
  <!-- <a href="#" class="btn-blue"> Add your dish !</a> -->

</div>


<div class="container">
  <div class="row">
    <%= link_to "Add your dish", new_dish_path, class:"btn-blue" %>
    <div class="col-sm-4" style="bottom: 50px;">
      <h3>My last dishes</h3>
      <% @dishes.each do |dish| %>
        <div><strong><%= dish.name %></strong></div>
        <p><%= dish.description %> (<%= dish.price %> $)</p>
        <%# cl_image_tag dish.photo%>
      <% end %>
    </div>
    <div class="col-sm-4" style="bottom: 50px;">
      <h3>My last orders</h3>
      <% @booked_dishes.each do |booked_dish| %>
        <div><strong><%= booked_dish.name %></strong></div>
        <p><%= booked_dish.description %> (<%= booked_dish.price %> $)</p>
      <% end %>
    </div>



  <a><%= link_to "Add your dish", new_dish_path, class:"btn-blue" %></a>
  <a><%= link_to "Make an order", dishes_path, class:"btn-blue" %></a>

</div>
