<div class="navbar-minimalist">
  <h1>NeighborFood</h1>

      <div class="nav-container">

        <%= link_to "See all dishes", dishes_path, class:"btn my-btn" %>

        <%= link_to "Become a cooker", new_user_registration_path, class:"btn my-btn" %>

        <%= link_to "Login", new_user_session_path, class:"btn btn-secondary" %>
      </div>
    </div>
</div>


<%= simple_form_for @dish do |f| %>
  <%= f.label 'Edit the name:' %><br>
  <%= f.text_field :name %><br>

  <%= f.label 'Edit the description:' %><br>
  <%= f.text_area :description %><br>

  <%= f.label 'Edit your previous photo:' %><br>
  <%= cl_image_tag @dish.photo, class:"dish-img-edit"%>

  <%= f.input :photo_cache, as: :hidden %>
  <%= f.input :photo %>

  <%= f.submit "Edit your dish", class:"my_btn" %>
<% end %>



