
<div class="content m-5">

<div class="navbar-minimalist">
  <h1><%= link_to"NeighborFood", root_path%></h1>
      <div class="nav-container">
        <%= link_to "See all dishes", dishes_path, class:"btn nb-light" %>
        <%= link_to "Become a cooker", cooker_path, class:"btn nb-light"%>
        <%= link_to "Login", new_user_session_path, class:"btn btn-login" %>
        <%= link_to "Log out", destroy_user_session_path, method: :delete, class:"btn btn-login" %>
      </div>
    </div>
</div>


<div class="content m-4">

  <h3>All dishes around you</h3>
    <%= form_tag dishes_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a dish"
      %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

  <div class="position-relative row">
    <div class="card border col col-sm-8 position-sticky">
      <div class="row" >
        <% @dishes.each do |dish|%>
          <div class="card-pic border mb-2 col col-sm-12">
            <%= cl_image_tag dish.photo, class:"dish-img"%>
            <div class="card-description p-3">
              <h4><%= link_to dish.name, dish_path(dish) %></h4>
              <p><%= dish.description %></p>
              <p><%= dish.price %>$</p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="map-card col col-sm-4"
      id="map"
      style="width: 100%;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
  </div>
</div>

