<div class="content m-5">
  <h3>All dishes around you</h3>
    <%= simple_form_for [dishes] do |f| %>
    <%= f.input :name %>
    <%= f.submit "search", class:"my_btn" %>
    <% end %>
  <div class="position-relative row">
    <div class="card border col col-sm-8 position-sticky">
      <div class="row" >
        <% @dishes.each do |dish|%>
          <div class="card-pic border mb-2 col col-sm-12">
            <%= cl_image_tag dish.photo, class:"dish-img"%>
            <div class="card-description p-3">
              <h4><%= link_to dish.name, dish_path(dish) %></h4>
              <p><%= dish.description %></p>
              <p><%= dish.price %>$</p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="map-card col col-sm-4"
      id="map"
      style="width: 100%;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
  </div>
</div>

<div class="footer">
  <div class="footer-links">
    <a href="#"><i class="fab fa-github"></i></a>
    <a href="#"><i class="fab fa-instagram"></i></a>
    <a href="#"><i class="fab fa-facebook"></i></a>
    <a href="#"><i class="fab fa-twitter"></i></a>
  </div>
</div>

