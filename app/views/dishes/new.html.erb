<div class="navbar-minimalist">
  <h1>NeighborFood</h1>

      <div class="nav-container">

        <%= link_to "See all dishes", dishes_path, class:"btn my-btn" %>

        <%= link_to "Become a cooker", new_user_registration_path, class:"btn my-btn" %>

        <%= link_to "Login", new_user_session_path, class:"btn btn-secondary" %>
      </div>
    </div>
</div>


<div class= "background">
  <%= simple_form_for [@dish] do |f| %>
    <%= f.input :name %>
    <%= f.input :price %>
    <%= f.input :description %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.input :photo %>
    <%= f.hidden_field :user_id%>
    <%= f.submit "add this dish", class:"my_btn" %>
  <% end %>
<%= link_to "See all dishes", dishes_path, class:"my_btn" %>
</div>
